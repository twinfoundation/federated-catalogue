{
	"name": "@twin.org/federated-catalogue-service",
	"version": "0.0.1",
	"description": "Federated Catalogue contract implementation and REST endpoint definitions",
	"repository": {
		"type": "git",
		"url": "https://github.com/twinfoundation/federated-catalogue.git",
		"directory": "packages/federated-catalogue-service"
	},
	"author": "jose.cantera@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage docs/reference",
		"build": "tsc",
		"build:watch": "nodemon --watch src --ext ts --exec \"npm run build && npm run bundle:esm\"",
		"test": "vitest --run --config ./vitest.config.ts --no-cache",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts --no-cache",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs:api": "ts-to-openapi ./ts-to-openapi.json ./docs/open-api/spec.json",
		"docs": "npm run docs:clean && npm run docs:generate && npm run docs:api",
		"dist": "npm run clean && npm run build && npm run test && npm run bundle && npm run docs",
		"dist:no-test": "npm run clean && npm run build && npm run bundle && npm run docs",
		"prepare": "ts-patch install -s"
	},
	"dependencies": {
		"@twin.org/api-models": "^0.0.2-next.1",
		"@twin.org/core": "^0.0.1",
		"@twin.org/entity": "^0.0.1",
		"@twin.org/entity-storage-models": "^0.0.1",
		"@twin.org/nameof": "^0.0.1",
		"@twin.org/federated-catalogue-models": "^0.0.1",
		"@twin.org/web": "^0.0.1",
		"@twin.org/logging-models": "^0.0.1",
		"@twin.org/identity-models": "^0.0.1",
		"@twin.org/identity-service": "^0.0.1",
		"@twin.org/standards-w3c-did": "^0.0.1",
		"@twin.org/standards-gaia-x": "^0.0.1",
		"@twin.org/standards-schema-org": "^0.0.1",
		"@twin.org/standards-w3c-odrl": "^0.0.1",
		"@twin.org/crypto": "^0.0.1",
		"@twin.org/data-json-ld": "^0.0.1"
	},
	"devDependencies": {
		"@twin.org/standards-ld-contexts": "^0.0.1",
		"@twin.org/modules": "^0.0.1",
		"@twin.org/nameof-transformer": "^0.0.1",
		"@twin.org/nameof-vitest-plugin": "^0.0.1",
		"@twin.org/ts-to-openapi": "^0.0.1",
		"@types/node": "24.0.1",
		"@vitest/coverage-v8": "3.2.3",
		"copyfiles": "2.4.1",
		"rimraf": "6.0.1",
		"rollup": "4.43.0",
		"ts-patch": "3.3.0",
		"tsc-watch": "7.1.1",
		"typedoc": "0.28.5",
		"typedoc-plugin-markdown": "4.6.4",
		"typescript": "5.8.3",
		"vitest": "3.2.3",
		"http-server": "14.1.1"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs"
		},
		"./locales/*.json": "./locales/*.json"
	},
	"files": [
		"dist/cjs",
		"dist/esm",
		"dist/types",
		"locales",
		"docs"
	]
}
